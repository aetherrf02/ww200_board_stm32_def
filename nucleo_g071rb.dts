/dts-v1/;
#include <st/g0/stm32g071Xb.dtsi>
#include <st/g0/stm32g071r(6-8-b)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <dt-bindings/dma/stm32_dma.h>


/ {
	model = "STMicroelectronics STM32G071RB-NUCLEO board";
	compatible = "st,stm32g071rb-nucleo";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,usart3 = &usart3;
	};

	leds: leds {
		compatible = "gpio-leds";

		radio_link_led: led_0 {
			gpios = <&gpioa 11 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		tx_led: led_1 {
			gpios = <&gpiob 3 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		cpu_led: led_2 {
			gpios = <&gpiob 4 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};		
		status_led: led_3 {
			gpios = <&gpiob 5 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		rssi_0_led: led_4 {
			gpios = <&gpioa 10 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		rssi_1_led: led_5 {
			gpios = <&gpioc 7 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		rssi_2_led: led_6 {
			gpios = <&gpioc 6 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};		
		rssi_3_led: led_7 {
			gpios = <&gpioa 9 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		rssi_4_led: led_8 {
			gpios = <&gpioa 8 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};		
		rssi_5_led: led_9 {
			gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		busy_1_led: led_10 {
			gpios = <&gpioc 14 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};		
		busy_2_led: led_11 {
			gpios = <&gpioc 8 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		busy_3_led: led_12 {
			gpios = <&gpioc 3 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		busy_4_led: led_13 {
			gpios = <&gpiob 13 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		pair_1_led: led_14 {
			gpios = <&gpioc 15 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};		
		pair_2_led: led_15 {
			gpios = <&gpioa 15 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		pair_3_led: led_16 {
			gpios = <&gpioc 2 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};		
		pair_4_led: led_17 {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		focus_btn: button0 {
			label = "User";
			gpios = <&gpioa 12 GPIO_ACTIVE_LOW>;
			//zephyr,code = <FOCUS_BTN>;
		};

		misc_btn: button1 {
			label = "User";
			gpios = <&gpioc 0 GPIO_ACTIVE_LOW>;
			//zephyr,code = <MISC_BTN>;
		};

		pair_btn: button2 {
			label = "User";
			gpios = <&gpioc 1 GPIO_ACTIVE_LOW>;
			//zephyr,code = <PAIR_BTN>;
		};
	};

	wiegand_pins {
    compatible = "gpio-leds"; // A generic compatible for simple GPIO outputs
    
    wiegand_p0_d0: pin_0 {
        gpios = <&gpioa 6 GPIO_ACTIVE_LOW>; // Wiegand is typically active-low
        label = "Wiegand D0";
    };

    wiegand_p0_d1: pin_1 {
        gpios = <&gpioa 7 GPIO_ACTIVE_LOW>;
        label = "Wiegand D1";
    };
};

	aliases {
		focus-button = &focus_btn;
		test-button = &misc_btn;
		pair-button = &pair_btn;
		watchdog0 = &iwdg;
		die-temp0 = &die_temp;
		volt-sensor0 = &vref;
		volt-sensor1 = &vbat;
        wiegand-p0-d0 = &wiegand_p0_d0;
        wiegand-p0-d1 = &wiegand_p0_d1;
    };
};

&clk_lsi {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <8>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(64)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
    dmas = <&dma1 1 55 STM32_DMA_PERIPH_TX>,
           <&dma1 2 54 STM32_DMA_PERIPH_RX>;
    dma-names = "tx", "rx";
};

&dma1 {
    status = "okay";
};

//&gpioc {
//    #dma-cells = <1>;
//};

&usart2 {
	pinctrl-0 = <&usart2_tx_pd5 &usart2_rx_pa3>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};


&rtc {
	clocks = <&rcc STM32_CLOCK(APB1, 10)>,
		 <&rcc STM32_SRC_LSI RTC_SEL(2)>;
	status = "okay";

	backup_regs {
		status = "okay";
	};
};

&iwdg {
	status = "okay";
};

&timers3 {
	st,prescaler = <10000>;
	status = "okay";

	pwm3: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch1_pa6>;
		pinctrl-names = "default";
	};
};
