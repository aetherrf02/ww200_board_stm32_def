/dts-v1/;
#include <st/g0/stm32g071Xb.dtsi>
#include <st/g0/stm32g071r(6-8-b)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <dt-bindings/dma/stm32_dma.h>


/ {
	model = "STMicroelectronics STM32G071RB-NUCLEO board";
	compatible = "st,stm32g071rb-nucleo";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,usart3 = &usart3;
	};

	leds: leds {
		compatible = "gpio-leds";
		tx_led: led_0 {
			gpios = <&gpioc 5 GPIO_ACTIVE_HIGH>;
			label = "led0";
		};
		cpu_led: led_1 {
			gpios = <&gpioa 5 GPIO_ACTIVE_HIGH>;
			label = "led1";
		};		
		rssi_0_led: led_2 {
			gpios = <&gpioc 10 GPIO_ACTIVE_HIGH>;
			label = "led2";
		};
		rssi_1_led: led_3 {
			gpios = <&gpiob 9 GPIO_ACTIVE_HIGH>;
			label = "led3";
		};
		rssi_2_led: led_4 {
			gpios = <&gpiob 7 GPIO_ACTIVE_HIGH>;
			label = "led4";
		};		
		rssi_3_led: led_5 {
			gpios = <&gpiob 5 GPIO_ACTIVE_HIGH>;
			label = "led5";
		};
		rssi_4_led: led_6 {
			gpios = <&gpiob 4 GPIO_ACTIVE_HIGH>;
			label = "led6";
		};		
		rssi_5_led: led_7 {
			gpios = <&gpiob 3 GPIO_ACTIVE_HIGH>;
			label = "led7";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		push_btn: button0 {
			label = "User";
			gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
			//zephyr,code = <PUSH_BTN>;
		};
	};

	wiegand_pins {
    compatible = "gpio-leds"; // A generic compatible for simple GPIO outputs
    
    wiegand_in_d0: pin_0 {
        gpios = <&gpiod 0 GPIO_ACTIVE_LOW>; // Wiegand is typically active-low
        label = "Wiegand D0";
    };

    wiegand_in_d1: pin_1 {
        gpios = <&gpioc 9 GPIO_ACTIVE_LOW>;
        label = "Wiegand D1";
    };

	rex_in: pin_2 {
        gpios = <&gpiob 8 GPIO_ACTIVE_LOW>; // Wiegand is typically active-low
        label = "Wiegand D0";
    };

    dp_in: pin_3 {
        gpios = <&gpiob 6 GPIO_ACTIVE_LOW>;
        label = "Wiegand D1";
    };

	dout1_ctrl: pin_4 {
        gpios = <&gpiod 2 GPIO_ACTIVE_LOW>; // Wiegand is typically active-low
        label = "Wiegand D0";
    };

    dout2_ctrl: pin_5 {
        gpios = <&gpiod 1 GPIO_ACTIVE_LOW>;
        label = "Wiegand D1";
    };

	relay_1: pin_6 {
        gpios = <&gpioc 11 GPIO_ACTIVE_LOW>; // Wiegand is typically active-low
        label = "Wiegand D0";
    };

    relay_2: pin_7 {
        gpios = <&gpioc 13 GPIO_ACTIVE_LOW>;
        label = "Wiegand D1";
    };
};

	aliases {
		push-btn = &push_btn;
		watchdog0 = &iwdg;
		die-temp0 = &die_temp;
		volt-sensor0 = &vref;
		volt-sensor1 = &vbat;
        wiegand-in-d0 = &wiegand_in_d0;
        wiegand-in-d1 = &wiegand_in_d1;
		tx-led = &tx_led;
		cpu-led = &cpu_led;
		rssi-0-led = &rssi_0_led;
		rssi-1-led = &rssi_1_led;
		rssi-2-led = &rssi_2_led;
		rssi-3-led = &rssi_3_led;
		rssi-4-led = &rssi_4_led;
		rssi-5-led = &rssi_5_led;
		rex-in = &rex_in;
		dp-in = &dp_in;
		dout1-ctrl = &dout1_ctrl;
		dout2-ctrl = &dout2_ctrl;
		relay-1 = &relay_1;
		relay-2 = &relay_2;
    };
};

&clk_lsi {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <8>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(64)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
    dmas = <&dma1 1 55 STM32_DMA_PERIPH_TX>,
           <&dma1 2 54 STM32_DMA_PERIPH_RX>;
    dma-names = "tx", "rx";
};

&dma1 {
    status = "okay";
};

//&gpioc {
//    #dma-cells = <1>;
//};

&usart2 {
	pinctrl-0 = <&usart2_tx_pd5 &usart2_rx_pa3>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};


&rtc {
	clocks = <&rcc STM32_CLOCK(APB1, 10)>,
		 <&rcc STM32_SRC_LSI RTC_SEL(2)>;
	status = "okay";

	backup_regs {
		status = "okay";
	};
};

&iwdg {
	status = "okay";
};

&timers3 {
	st,prescaler = <10000>;
	status = "okay";

	// pwm3: pwm {
	// 	status = "okay";
	// 	pinctrl-0 = <&tim3_ch1_pa6>;
	// 	pinctrl-names = "default";
	// };
};
